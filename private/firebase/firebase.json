{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/private/**",
      "**/.env"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/pages/alert.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      }
    ]
  }
}